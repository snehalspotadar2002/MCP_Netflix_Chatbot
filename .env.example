# Netflix Data Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# ============= MCP SERVER SETTINGS =============
MCP_HOST=localhost
MCP_PORT=8000
MCP_SERVER_NAME=Netflix Data Analyzer

# ============= STREAMLIT SETTINGS =============
STREAMLIT_THEME=light
STREAMLIT_CLIENT_SHOWRUNNERONAPPLOAD=false

# ============= FILE PATHS =============
DATA_FILE=netflix_data.csv
CACHE_FILE=netflix_cache.json
LOG_FILE=netflix_analyzer.log

# ============= FEATURES =============
ENABLE_CACHE=true
ENABLE_VISUALIZATION=true
ENABLE_EXPORT=true
ENABLE_ADVANCED_NLP=false

# ============= TIMEOUTS & LIMITS =============
DEFAULT_TIMEOUT=30
MAX_RESULTS_PER_QUERY=1000
BATCH_SIZE=1000
CACHE_EXPIRY_HOURS=24

# ============= LOGGING =============
LOG_LEVEL=INFO

# ============= OPTIONAL: API KEYS =============
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============= OPTIONAL: DATABASE =============
# USE_DATABASE=false
# DATABASE_URL=sqlite:///netflix_analyzer.db

# ============= TIMEZONE =============
TIMEZONE=UTC

# ============= DEBUG MODE =============
DEBUG=false
